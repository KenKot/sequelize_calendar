<header class="page-header">
    <h1>Invitations Index</h1>
    <a href="/invitations/new" class="btn btn-primary">+ New Invitation</a>
  </header>
  
  <% if (invitations && invitations.length) { %>
    <table class="table">
      <thead>
        <tr>
          <th>Event Name</th>
          <th>Username</th>
          <th>Email</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% invitations.forEach(function(invitation) { %>
          <tr>
            <td>
              <%= invitation.Event.name %>
            </td>
            <td>
              <%= invitation.User.username %>
            </td>
            <td>
              <%= invitation.User.email %>
            </td>
            <td>
              <a href="/invitations/<%= invitation.userId %>/<%= invitation.eventId %>/delete" class="text-danger">Delete</a>

              </td>            
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <p class="text-danger">No Invitations</p>
  <% } %>
  