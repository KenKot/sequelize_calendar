<header class="page-header">
    <h1>Events Index</h1>
    <a href="/events/new" class="btn btn-primary">+ New Event</a>
  </header>
  
  <% if (events && events.length) { %>
    <table class="table">
      <thead>
        <tr>
          <th>Event Name</th>
          <th>Date</th>
          <th>Start Time</th>
          <th>End Time</th>
          <th>Calendar Name</th>
          <th>Username</th>
          <th>Email</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% events.forEach(function(event) { %>
          <tr>
            <td>
              <a href="/events/<%= event.id %>"><%= event.name %></a>
            </td>
            <td>
              <a href="/events/<%= event.id %>"><%= event.date %></a>
            </td>
            <td>
              <a href="/events/<%= event.id %>"><%= event.startTime %></a>
            </td>
            <td>
                <a href="/events/<%= event.id %>"><%= event.endTime %></a>
            </td>
            <td>
                <a href="/events/<%= event.id %>"><%= event.Calendar.name %></a>
            </td>            
            <td>
                <a href="/events/<%= event.id %>"><%= event.Calendar.User.username %></a>
            </td>            
            <td>
                <a href="/events/<%= event.id %>"><%= event.Calendar.User.email %></a>
            </td>            
            <td>                
              <a href="/events/<%= event.id %>/edit">Edit</a>
            </td>
            <td>
              <a href="/events/<%= event.id %>/delete" class="text-danger">Delete</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <p class="text-danger">No events</p>
  <% } %>
  